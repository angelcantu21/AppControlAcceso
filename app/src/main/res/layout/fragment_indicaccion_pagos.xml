<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Fragments.IndicacionPagosFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imgPagos"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/paypal"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/txtPagos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="En esta aplicacion podras pagar tus mensualidades automaticamente sin la necesidad de ir a bancos o cajeros."
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

</LinearLayout>